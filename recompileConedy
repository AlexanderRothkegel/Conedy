include ${HOME}/.config/conedy/config.h


doit: ${todo}


conedy:

python-conedy:

documentation:

conedy-src: recompile


recompile: ${HOME}/.config/conedy/config.h
	TMP=`mktemp`; cd ${dirsrc}; sum addedNodes/*.cfg > $$TMP; sum ${addedDir}/*.cfg >> $$TMP;  diff $$TMP ${dirsrc}/addedNodes.sum.old  || ${noUserSpace} touch ${dirsrc}/recompilationConedyStarted ${dirsrc}/recompilationPython-ConedyStarted
	[ -f ${dirsrc}/recompilationConedyStarted  ]
	make -C ${dirsrc} conedy.recompile  &



${HOME}/.config/conedy/config.h:
	mkdir -p ${HOME}/.config/conedy
	[ -f /etc/conedy.config ] && ln -s /etc/conedy.config ${HOME}/.config/conedy/config.h && recompileConedy 
	

	
.PHONY:	recompile conedy python-conedy documentation conedy-src
