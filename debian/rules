#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DEB_MAKE_INSTALL_TARGET = install DESTDIR=$(CURDIR)/debian/tmp/

DEB_PYTHON_SYSTEM := pysupport

#DEB_MAKE_CHECK_TARGET=test

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/makefile.mk



makebuilddir/conedy::
#	cat config.h
	sed "s#^VERSION.*\$$#VERSION =`head debian/changelog -n1 | awk '{print $$2}'  | sed "s/(//" | sed "s/)//"`#" debian/config.h >  config.h
#	cp debian/config.h config.h

makebuilddir/python-conedy::
	make addNodesIfNecessary docstrings.h docstringsNodes.h string_config.h

include /usr/share/cdbs/1/class/python-distutils.mk


install/python-conedy::
	mkdir -p  tmp/usr/bin/
	cp -a recompileConedy debian/tmp/usr/bin/recompileConedy
	
	




all::
	mv config.debian config.h



clean::
	rm -rf build build-stamp configure-stamp build/ MANIFEST

