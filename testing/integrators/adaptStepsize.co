network net;

roessler_omega = 0.89;
roessler_a = 0.165;
roessler_b = 0.2;
roessler_c = 10.0;



dynNetwork_ioNodeDt = 0.1;

#gslOdeNode_error_abs = 0.1;
#gslOdeNode_error_rel = 0.1;


net.addNode<roessler>();
net.setState(0, 0.0, 0.0, 0.0 );

net.observeTime("output/adaptStepsize.co.series");
net.observe<component(0)>(0,"output/adaptStepsize.co.series");
net.observe<component(1)>(0,"output/adaptStepsize.co.series");
net.observe<component(2)>(0,"output/adaptStepsize.co.series");

net.evolve(0.0,1500.0);

net.clear();


gslOdeNode_error_abs = 0.00000000000001;
gslOdeNode_error_rel = 0.00000000000001;



int nodeNumber;


nodeNumber = net.addNode<roessler>();
net.setState(nodeNumber, 0.0, 0.0, 0.0 );

net.observeTime("output/adaptStepsize.co.series2");
net.observe<component(0)>(nodeNumber,"output/adaptStepsize.co.series2");
net.observe<component(1)>(nodeNumber,"output/adaptStepsize.co.series2");
net.observe<component(2)>(nodeNumber,"output/adaptStepsize.co.series2");

net.evolve(0.0,1500.0);


